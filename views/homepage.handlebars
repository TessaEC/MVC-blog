<div>
  <h2 class="color header-style">Blogs</h2>
</div>
<div>
  {{#each posts as |post|}}
  <div class="divider">
    <h4>{{post.title}}</h4>
    {{!-- <button class="small-text view-post" data-id="{{post.id}}">View Blog</button> --}}
<a href="/api/post/{{post.id}}" class="small-text view-post" data-id="{{post.id}}">View Blog</a>
    <div>
      <p class="para">{{post.content}}</p>
      <p class="small-text">Written by {{user.username}} on {{formatDate created_at}}</p>
    </div>
  </div>
  {{/each}}
</div>

<script src="/js/homepage.js"></script>