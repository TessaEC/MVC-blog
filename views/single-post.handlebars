{{!-- homepage single-post --}}
  </form>
  <div>
  <div>
    <h3>{{post.title}}</h3>
    <p  class="para">{{post.content}}</p>
    <p class="small-text">Written by {{post.user.username}} on {{formatDate created_at}}</p>
  </div>
  <div>
    {{#each post.comment.comments as |comment|}}

    <input class="form-control para" name="title" id="content" rows="1" value="{{comment.content}}"></input>
    <p class="small-text">{{comment.user.username}} on {{formatDate created_at}}</p>
  </div>
  <div>
    {{#if logged_in}}
    <input name="comment" cols="30" rows="10"></input>
    <button type="submit" class="btn btn-primary" id="add-comment">Submit</button>
    {{/if}}
    {{/each}}
  </div>
</div>
</form>



<script src="./js/single-post.js"></script>