<div class="text-center">
   <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <p>Written by {{user.username}} on {{formatDate created_at}}</p>
</div>
  {{ post.comments as |comment| }}
  <div>
    <p>{{comment.content}}</p>
    <p>Commentator: {{comment.user.username}}</p>
  </div>
  <p>
    <button class="btn btn-primary">Fund this Project!</button>
  </p>
</div>