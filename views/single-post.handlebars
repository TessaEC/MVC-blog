{{!-- homepage single-post --}}
<div>
  <div>
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <p>Written by {{user.username}} on {{formatDate created_at}}</p>
  </div>
  {{#each comment.comments as |comment|}}
  <div>
    <p>{{comment.content}}</p>
    <p>{{comment.user.username}} on {{formatDate created_at}}</p>
  </div>
  {{#if logged_in}}
    <button href="/{{comment.id}}">Edit Comment</button>
    <button href="/{{post.id}}">Edit Blog</button>
  <div>
    <textarea name="comment" id="add-comment" cols="30" rows="10">Add comment here...</textarea>
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  {{/if}}
  {{/each}}

  {{!-- Edit comment form --}}
<form class="hide">
    <div>
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <p>Written by {{user.username}} on {{formatDate created_at}}</p>
  </div>
  <div class="form-group">
    <label for="title">Edit</label>
    <textarea class="form-control" name="title" id="title" rows="1">{{comment.content}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="update-comment">Update Comment</button>
  <button type="submit" class="btn btn-primary" id="delete-comment">Delete Comment</button>
</form>
</div>

{{!-- Edit blog form --}}
<form class="hide">
  <div class="form-group">
    <label for="title">Blog Title</label>
    <textarea class="form-control" name="title" id="title" rows="1">{{post.title}}</textarea>
  </div>
  <div class="form-group">
    <label for="content">Blog Content</label>
    <textarea class="form-control" name="content" id="content" rows="5">{{post.content}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="update-post">Update Blog</button>
  <button type="submit" class="btn btn-primary" id="delete-post">Delete Blog</button>
</form>




<script src="./js/single-post.js"></script>